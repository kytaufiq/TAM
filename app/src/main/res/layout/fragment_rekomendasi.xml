<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ui.rekomendasi.RekomendasiFragment">

    <!-- Header dengan background putih -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Smartphone Terbaik"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pilihan terbaik berdasarkan penilaian menyeluruh dari SmartRec"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- ScrollView untuk daftar smartphone -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!-- ðŸ†• CONTAINER UNTUK WINNER CARD -->
            <LinearLayout
                android:id="@+id/winner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <!-- Winner card akan ditambah di sini -->

            </LinearLayout>

            <!-- Ranking Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Ranking Smartphone Terbaik"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ðŸ†• CONTAINER UNTUK RANKING CARDS -->
            <LinearLayout
                android:id="@+id/ranking_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Ranking cards akan ditambah di sini -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
