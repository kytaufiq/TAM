<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Rank Badge -->
    <TextView
        android:id="@+id/tv_vivo_rank_number"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rounded_box"
        android:gravity="center"
        android:text="#1"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Product Image -->
    <ImageView
        android:id="@+id/iv_vivo_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/hp_iphone15pro" />

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_vivo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="X100 Pro"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_vivo_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Vivo"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_vivo_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="⭐ 4.6"
            android:textColor="#000000"
            android:textSize="13sp" />

        <!-- Vivo Specs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vivo_processor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Dimensity 9300"
                android:textColor="#444444"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_vivo_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="256GB"
                android:textColor="#444444"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vivo_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="50MP Zeiss"
                android:textColor="#444444"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_vivo_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.78 inch"
                android:textColor="#444444"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_vivo_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Flagship dengan kamera Zeiss dan V3 chip"
            android:textColor="#444444"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_vivo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 14.999.000"
            android:textColor="#673AB7"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Detail Button -->
    <TextView
        android:id="@+id/btn_vivo_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#333333"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="Lihat Detail"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</LinearLayout>