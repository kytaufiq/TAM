<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Rank Badge -->
    <TextView
        android:id="@+id/tv_hp3jutaan_rank_number"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rounded_box"
        android:gravity="center"
        android:text="#1"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Product Image -->
    <ImageView
        android:id="@+id/iv_hp3jutaan_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/hp_iphone15pro" />

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hp3jutaan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Redmi Note 13"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hp3jutaan_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Xiaomi"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_hp3jutaan_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="⭐ 4.4"
            android:textColor="#000000"
            android:textSize="13sp" />

        <!-- Mid-Range Specs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hp3jutaan_processor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Snapdragon 685"
                android:textColor="#444444"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_hp3jutaan_ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6GB RAM"
                android:textColor="#444444"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hp3jutaan_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="108MP"
                android:textColor="#444444"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_hp3jutaan_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000mAh"
                android:textColor="#444444"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_hp3jutaan_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Snapdragon 685 dengan kamera 108MP dan AMOLED display"
            android:textColor="#444444"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_hp3jutaan_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 2.999.000"
            android:textColor="#2196F3"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Detail Button -->
    <TextView
        android:id="@+id/btn_hp3jutaan_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#333333"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="Lihat Detail"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</LinearLayout>
