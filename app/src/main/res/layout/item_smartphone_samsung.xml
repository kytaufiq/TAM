<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Rank Badge -->
    <TextView
        android:id="@+id/tv_samsung_rank_number"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rounded_box"
        android:gravity="center"
        android:text="#1"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Product Image -->
    <ImageView
        android:id="@+id/iv_samsung_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hp_iphone15pro" />

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_samsung_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Galaxy S24 Ultra"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_samsung_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Samsung"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_samsung_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="⭐ 4.8"
            android:textColor="#000000"
            android:textSize="13sp" />

        <!-- Samsung Specs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_samsung_processor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Snapdragon 8 Gen 3"
                android:textColor="#444444"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_samsung_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="256GB"
                android:textColor="#444444"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_samsung_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="200MP"
                android:textColor="#444444"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_samsung_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.8 inch"
                android:textColor="#444444"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_samsung_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Flagship ultimate dengan S Pen dan kamera 200MP"
            android:textColor="#444444"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_samsung_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 19.999.000"
            android:textColor="#1976D2"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Detail Button -->
    <TextView
        android:id="@+id/btn_samsung_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#333333"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="Lihat Detail"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</LinearLayout>