        android:label="@string/menu_3jutaan"
        tools:layout="@layout/fragment_hp3jutaan" >
        <action
            android:id="@+id/action_hp3jutaan_to_detail"
            app:destination="@id/nav_detail"/>
    </fragment>
    <fragment
        android:id="@+id/nav_hp_4jutaan"
